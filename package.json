{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:instrumented": "set NODE_OPTIONS=--require ./instrumentation.js&& npx playwright test",
    "test:report": "playwright show-report",
    "test:with-logs": "node -r ./instrumentation.js ./node_modules/.bin/playwright test",
    "build:aws": "npm run build && sam build",
    "deploy:aws": "sam deploy --guided",
    "package:aws": "sam package --output-template-file packaged.yaml --s3-bucket your-deployment-bucket"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.65.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.206.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.206.0",
    "@opentelemetry/sdk-node": "^0.206.0",
    "@prisma/client": "^6.17.1",
    "consola": "^3.4.2",
    "next": "15.5.4",
    "os-browserify": "^0.3.0",
    "pino": "^10.1.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "uuid": "^13.0.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prisma": "^6.17.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
